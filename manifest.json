{
	"name": "ShitBlock",
	"version": "0.0.3",
	"manifest_version": 2,
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"64": "img/icon64.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/icon48.png",
		"default_popup": "popup.html",
		"default_title": "ShitBlock"
	},
	"background" :{
		"scripts": ["js/angular.js"]
	},
	"content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/background.js"]
    }],
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["storage"]
}